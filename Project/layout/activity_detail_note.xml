<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <RelativeLayout
            android:id="@+id/headerDetail"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#0348FF"
            android:padding="12dp">

            <!-- Tombol Back -->
            <ImageView
                android:id="@+id/btnBackDetail"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Judul CatatAja -->
            <TextView
                android:id="@+id/txtTitleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CatatAja!"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true" />

            <!-- Logo Kanan -->
            <ImageView
                android:id="@+id/imgLogoDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Judul Halaman -->
        <TextView
            android:id="@+id/txtHeaderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tampilan Catatan"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/headerDetail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Divider Judul Catatan -->
        <TextView
            android:id="@+id/txtLabelJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Catatan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/txtHeaderDetail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <!-- Isi Judul Catatan -->
        <TextView
            android:id="@+id/txtNoteTitleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Catatan"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:background="@drawable/bg_edittext"
            android:layout_below="@id/txtLabelJudul"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <!-- Label Isi Catatan -->
        <TextView
            android:id="@+id/txtLabelIsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Catatan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/txtNoteTitleDetail"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <!-- Isi Catatan -->
        <TextView
            android:id="@+id/txtNoteContentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:textSize="17sp"
            android:padding="12dp"
            android:gravity="top|start"
            android:layout_below="@id/txtLabelIsi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <!-- Tombol Edit -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Edit"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/bg_button"
            android:layout_below="@id/txtNoteContentDetail"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"/>

        <!-- Tombol Hapus -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Hapus"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/bg_button2"
            android:layout_below="@id/txtNoteContentDetail"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="40dp"/>

    </RelativeLayout>
</ScrollView>
